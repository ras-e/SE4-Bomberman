    <modelVersion>4.0.0</modelVersion>
    <groupId>dk.sdu.mmmi.bomberman</groupId>
    <artifactId>Bomberman</artifactId>
    <version>1.0-SNAPSHOT</version>

    <name>dk.sdu.mmmi.bomberman.Bomberman (OSGi project)</name>

    <!--
     | describe your project here
    -->

    <description>Generated using Pax-Construct</description>

    <properties>
        <!--
         | some example OSGi runtime properties
        -->
        <org.osgi.service.http.port>8080</org.osgi.service.http.port>
        <org.osgi.service.http.port.secure>8443</org.osgi.service.http.port.secure>
        <maven.compiler.target>1.8</maven.compiler.target>
        <maven.compiler.source>1.8</maven.compiler.source>
    </properties>

    <packaging>pom</packaging>

    <modules>
        <module>poms</module>
        <module>provision</module>
        <module>OSGiLibGDX</module>
        <module>OSGiCommon</module>
        <module>OSGiEnemy</module>
        <module>OSGiBomb</module>
        <module>OSGiAI</module>
        <module>OSGiCollision</module>
        <module>OSGiPlayer</module>
        <module>OSGiCore</module>
    </modules>

    <build>
        <plugins>
            <plugin>
                <groupId>org.ops4j</groupId>
                <artifactId>maven-pax-plugin</artifactId>
                <version>1.6.0</version>
                <configuration>
                    <!--
                     | some example Pax-Runner settings
                    -->
                    <provision>
                        <param>--platform=felix</param>
                      <param> --vmOptions=-agentlib:jdwp=transport=dt_socket,server=y,suspend=n,address=5005</param>
                    </provision>
                </configuration>
                <executions>
                    <!--
                     | uncomment to auto-generate IDE files
                    <execution>
                      <id>ide-support</id>
                      <goals>
                        <goal>eclipse</goal>
                      </goals>
                    </execution>
                    -->
                </executions>
            </plugin>
        </plugins>
    </build>

</project>